<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.acuant.sampleapp.MainActivity">

    <Button
        android:id="@+id/main_id_passport"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="idPassPortClicked"
        android:text="ID/Passport"></Button>
    <Button
        android:id="@+id/main_health_card"
        android:layout_margin="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Health Insurance Card"
        android:onClick="healthInsuranceClicked"
        app:layout_constraintTop_toBottomOf="@id/main_id_passport">
    </Button>

    <Switch
        android:layout_margin="30dp"
        android:id="@+id/autoCaptureSwitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Auto Capture"
        android:checked="true"
        app:layout_constraintTop_toBottomOf="@id/main_health_card"
        />

    <Switch
        android:layout_margin="30dp"
        android:id="@+id/isIPLivenessEnabled"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="IP Liveness Enabled"
        android:visibility="invisible"
        android:checked="true"
        app:layout_constraintTop_toBottomOf="@id/autoCaptureSwitch"
        />
</android.support.constraint.ConstraintLayout>
